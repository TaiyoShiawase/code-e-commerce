                                <a class="dropdown-item" href="/product/hoodies-all">TIGERHOODS</a>
                            </div>
                        <a href="" class="nav mx-2">About</a>
                        <a href="" class="nav mx-2">Contact</a>
                    </div>
                </div>

                <!-- 3/3 -->
                <div class="text-right m-0 p-0 pr-4
                    col-sm-12 col-md-2 col-xl-4">
                    <div class="row pt-2 m-0 float-right">
                        <a class="nav" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <img src="./images/icons/user.png" width="26px" alt="">
                        </a>
                        <% if(user){ %>
                            <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                                <form action="/logout?_method=DELETE" method="POST">
                                    <button type="submit" class="dropdown-item" href="/logout">Logout</button>
                                </form>
                            </div>
                        <% }else{ %>
                            <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                                <a class="dropdown-item" href="/register">Sign Up</a>
                                <a class="dropdown-item" href="/login">Login</a>
                            </div>
                        <% } %>
                     
                        <a href="/cart" class="nav ml-3"><img src="./images/icons/cart.png" width="26px" alt=""></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


